<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Fragment>
        <ComponentGroup Id="ApplicationComponents" Directory="INSTALLFOLDER">
            <Component Id="ApplicationComponent">
                <File Id="ApplicationFile" Source="BadEcho.QuickActions.exe" />
            </Component>
            <Component Id="NativeHooksComponent">
                <File Source="BadEcho.Hooks.Native.dll" />
            </Component>
            <Component Id="ApplicationSettingsComponent">
                <File Source="appsettings.json" />
            </Component>
        </ComponentGroup>
        <ComponentGroup Id="PluginComponents" Directory="PluginsFolder">
            <Component Id="SystemSettingsComponent">
                <File Source="BadEcho.QuickActions.SystemSettings.dll" />
            </Component>
        </ComponentGroup>
    </Fragment>
</Wix>