<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:BadEcho.QuickActions.ViewModels"
                    xmlns:v="clr-namespace:BadEcho.QuickActions.Views">

    <DataTemplate DataType="{x:Type vm:NavigationTargetViewModel}">
        <v:NavigationTargetView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:NavigationPaneViewModel}">
        <v:NavigationPaneView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
        <v:HomeView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ActionsViewModel}">
        <v:ActionsView/>
    </DataTemplate>
    
</ResourceDictionary>