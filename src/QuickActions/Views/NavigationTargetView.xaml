<badEcho:View x:Class="BadEcho.QuickActions.Views.NavigationTargetView"
              x:ClassModifier="internal"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:badEcho="http://schemas.badecho.com/presentation/2022/02/xaml"
              xmlns:vm="clr-namespace:BadEcho.QuickActions.ViewModels"
              mc:Ignorable="d"
              d:DesignStyle="{StaticResource DesignTimeControlStyle}">
    <d:DesignProperties.DataContext>
        <vm:NavigationTargetViewModel Name="home" 
                                      IconGlyph="&#xE8F2;"
                                      />
    </d:DesignProperties.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding IconGlyph}"
                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                   FontSize="16"
                   MaxWidth="16"
                   VerticalAlignment="Center"
                   Focusable="False"
                   Grid.Column="0"
                   />

        <TextBlock Text="{Binding Name}"
                   Margin="16,0,0,0"
                   Grid.Column="1"
                   />
    </Grid>
</badEcho:View>
