<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
    This allows for previewing the Dark variant of the Fluent theme at design-time. 
    XAML has no preprocessor-style directives, we can't rename DesignTimeResources.xaml, and mc:AlternateContent isn't supported by the designer,
    so there's no way to switch between Dark and other variants except by changing the source URI below.
    -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.Dark.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="DesignTimeControlStyle" TargetType="{x:Type ContentControl}">
        <Setter Property="Background" Value="{DynamicResource SolidBackgroundFillColorBaseBrush}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"></Setter>
    </Style>
</ResourceDictionary>